{
  "version": 2,
  "builds": [
    {
      "src": "/client/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    },
    {
      "src": "/server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/server/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}

